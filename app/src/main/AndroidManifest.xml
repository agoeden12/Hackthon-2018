<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="andrew.com.LetsAct">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="andrew.com.LetsAct.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="andrew.com.LetsAct.HomeScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="andrew.com.LetsAct.SignUp"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="andrew.com.LetsAct.Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Settings"
            android:parentActivityName="andrew.com.LetsAct.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity
            android:name="andrew.com.LetsAct.Stats"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Stats"
            android:parentActivityName="andrew.com.LetsAct.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity android:name="andrew.com.LetsAct.ModelLocalEvent" />
        <activity android:name="andrew.com.LetsAct.CanHunger"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="andrew.com.LetsAct.HomeScreen"
            android:screenOrientation="portrait"
            android:label="@string/canHungerTitle"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"/>
    </application>

</manifest>