<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="andrew.com.lets_act">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="andrew.com.lets_act.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="andrew.com.lets_act.HomeScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="andrew.com.lets_act.SignUp"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="andrew.com.lets_act.Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Settings"
            android:parentActivityName="andrew.com.lets_act.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity
            android:name="andrew.com.lets_act.Stats"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Stats"
            android:parentActivityName="andrew.com.lets_act.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity android:name="andrew.com.lets_act.ModelLocalEvent" />
        <activity android:name="andrew.com.lets_act.CanHunger"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="andrew.com.lets_act.HomeScreen"
            android:screenOrientation="portrait"
            android:label="@string/canHungerTitle"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"/>
    </application>

</manifest>