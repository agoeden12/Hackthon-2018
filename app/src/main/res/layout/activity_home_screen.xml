<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeScreenDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offWhite"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:context="andrew.com.hackathon_2018.HomeScreen">

        <android.support.v7.widget.Toolbar
            android:id="@+id/homeScreenToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/homeScreenHiUserTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeScreenToolbar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/encodesans_extralight"
            android:forceHasOverlappingRendering="true"
            android:text="@string/homeScreenHiUserText"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <ImageSwitcher
            android:id="@+id/homeScreenSponsorImageSwitcher"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/homeScreenHiUserTextView"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:elevation="12dp"
            android:foreground="@drawable/sponsor_gradient" />

        <HorizontalScrollView
            android:id="@+id/homeScreenLocalEventsScrollView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/homeScreenSponsorImageSwitcher"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:clipChildren="false">

            <LinearLayout
                android:id="@+id/homeScreenLocalEventsLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/canHungerCard"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sponsor_gradient">

                        <ImageView
                            android:id="@+id/canHungerImage"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/northgwinnettcoop" />

                        <TextView
                            android:id="@+id/canHungerTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/encodesans_extralight"
                            android:padding="4dp"
                            android:text="@string/canHungerTitle"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:id="@+id/modelDescriptionTextView"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/canHungerTextView"
                            android:text="@string/canHungerDesc"
                            />-->


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sponsor_gradient">

                        <ImageView
                            android:id="@+id/roadCleanUpImage"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/roadcleanup" />

                        <TextView
                            android:id="@+id/roadCleanUpTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/encodesans_extralight"
                            android:padding="4dp"
                            android:text="@string/roadCleanUpTitle"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/roadCleanUpTextView"
                            android:text="@string/roadCleanUpDescription"
                            />-->


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sponsor_gradient"

                        >

                        <ImageView
                            android:id="@+id/seniorCenterImage"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/sugarhillretire" />

                        <TextView
                            android:id="@+id/seniorCenterTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/encodesans_extralight"
                            android:padding="4dp"
                            android:text="@string/sugarHillRetireTitle"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/seniorCenterTextView"
                            android:text="@string/sugarHillRetireDescription"
                            />-->


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sponsor_gradient"

                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/feedhomeless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/encodesans_extralight"
                            android:padding="4dp"
                            android:text="@string/feedHomelessTitle"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/seniorCenterTextView"
                            android:text="@string/sugarHillRetireDescription"
                            />-->


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <!--
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_brightness_1_black_24dp"
                android:tint="@color/orange"
                android:layout_alignParentBottom="true"
                android:layout_margin="15dp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="50dp"
                android:elevation="-15dp"/>
        -->

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_share_black_24dp"
            android:tint="@color/orange"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="50dp" />

        <ImageButton
            android:id="@+id/addImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:background="@android:color/transparent"
            android:elevation="12dp"
            android:src="@drawable/ic_add_black_24dp"
            android:tint="@color/orange"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="50dp" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/homeScreenNavigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigation_drawer"/>

</android.support.v4.widget.DrawerLayout>