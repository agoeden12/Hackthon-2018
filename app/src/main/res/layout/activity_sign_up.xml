<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andrew.com.hackathon_2018.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signInLinearLayout"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="36dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signInScreenTitleTextView"
            android:textSize="24sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signUpScreenDisplayNameText"
            android:id="@+id/signUpScreenDisplayNameEditText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_username_image"
            android:id="@+id/signInScreenUsernameEditText"
            android:hint="@string/signInScreenEmailEditTextHint"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_password_image"
            android:inputType="textPassword"
            android:id="@+id/signInScreenPasswordEditText"
            android:hint="@string/signInScreenPasswordEditTextHint"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signUpScreenSchoolCodeHint"
            android:inputType="number"
            android:id="@+id/signUpScreenSchoolCodeEditText"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:text="@string/signInScreenSignUpButton"
            android:id="@+id/signInScreenSignUpButton"
            />
    </LinearLayout>
</RelativeLayout>
