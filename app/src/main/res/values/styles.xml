<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/darkRed</item>
        <item name="colorAccent">@color/lightGray</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/orange</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:actionOverflowButtonStyle">@drawable/ic_more_vert</item>
    </style>

    <style name="toolBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/darkRed</item>
        <item name="colorAccent">@color/lightGray</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/orange</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:actionOverflowButtonStyle">@drawable/ic_more_vert</item>
    </style>


